{
  "name": "today",
  "productName": "Today",
  "version": "0.0.1",
  "description": "A basic todo app built with Electron and Vue",
  "main": "main.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "test": "node ./release.js",
    "release": "npm run make && npm run test"
  },
  "repository": "https://github.com/jimbateson/today",
  "issues": "https://github.com/jimbateson/today/issues",
  "keywords": [
    "Electron",
    "todo",
    "todos",
    "Today",
    "Vue",
    "productivity",
    "starter project",
    "learning"
  ],
  "author": "James Bateson",
  "license": "MIT",
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.52",
    "@electron-forge/maker-deb": "^6.0.0-beta.52",
    "@electron-forge/maker-rpm": "^6.0.0-beta.52",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.52",
    "@electron-forge/maker-zip": "^6.0.0-beta.52",
    "@octokit/rest": "^18.0.0",
    "dotenv": "^8.2.0",
    "electron": "^8.2.4",
    "eslint": "^5.16.0"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0",
    "electron-store": "^5.1.1"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "appCategoryType": "public.app-category.productivity",
        "icon": "icons/today-icon"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "Today"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
